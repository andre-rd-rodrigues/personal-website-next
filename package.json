{
  "name": "andre-website",
  "version": "0.1.0",
  "private": true,
  "author": "Andre",
  "engine": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "pnpm run build:images && next build --webpack",
    "build:ci": "next build",
    "build:images": "pnpm run tinypng && bash scripts/convert-webp.sh",
    "start": "next start",
    "lint": "eslint .",
    "prod": "next build && next start",
    "prepare": "husky",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint '*/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --check \"**/*.{js,jsx,json,ts,tsx,scss,css,md}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,json,ts,tsx,scss,css,md}\"",
    "analyze": "ANALYZE=true pnpm run build",
    "type-check": "tsc --noEmit",
    "knip": "knip",
    "test": "jest",
    "test:watch": "jest --watch",
    "tinypng": "tinypng public/images"
  },
  "dependencies": {
    "@iconify/react": "^5.0.0",
    "@next/third-parties": "^16.1.6",
    "@tabler/icons-react": "^3.37.0",
    "@tsparticles/engine": "^3.5.0",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.5.0",
    "@typeform/embed-react": "^4.11.0",
    "@vercel/speed-insights": "^1.3.0",
    "chart.js": "^4.4.4",
    "framer-motion": "^11.12.0",
    "graphql": "^16.13.0",
    "graphql-request": "^7.4.0",
    "motion": "^12.34.0",
    "next": "^16.1.6",
    "next-intl": "^3.19.3",
    "nookies": "^2.5.2",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.2.4",
    "react-html-parser": "^2.0.2",
    "react-intersection-observer": "^10.0.0",
    "sass": "^1.97.0",
    "swiper": "^12.1.2",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-html-parser": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "autoprefixer": "^10.4.20",
    "baseline-browser-mapping": "^2.10.0",
    "clsx": "^2.1.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tinypng-cli": "^0.0.7",
    "typescript": "^5.6.3",
    "use-count-up": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ]
  }
}
