{
  "name": "andre-website",
  "version": "0.1.0",
  "private": true,
  "author": "Andre",
  "engine": {
    "node": ">=22",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "bun run build:images && next build",
    "build:ci": "next build",
    "build:images": "bun run tinypng && bash scripts/convert-webp.sh",
    "start": "next start",
    "lint": "next lint",
    "prod": "next build && next start",
    "prepare": "husky",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint '*/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write \"**/*.{js,jsx,json,ts,tsx,scss,css,md}\"",
    "analyze": "ANALYZE=true bun run build",
    "type-check": "tsc --noEmit",
    "knip": "knip",
    "tinypng": "tinypng public/images"
  },
  "dependencies": {
    "@iconify/react": "^4.1.1",
    "@next/third-parties": "^16.0.0",
    "@tabler/icons-react": "^3.35.0",
    "@tsparticles/engine": "^3.5.0",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.5.0",
    "@typeform/embed-react": "^3.11.0",
    "@vercel/speed-insights": "^1.0.10",
    "chart.js": "^4.4.4",
    "framer-motion": "^11.0.3",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "motion": "^12.4.1",
    "next": "15.5.10",
    "next-intl": "^3.19.3",
    "nookies": "^2.5.2",
    "react": "^18",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18",
    "react-html-parser": "^2.0.2",
    "react-intersection-observer": "^9.13.1",
    "sass": "^1.69.7",
    "swiper": "^11.1.14",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.12",
    "@types/domutils": "^2.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-html-parser": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.0.1",
    "clsx": "^2.1.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.32",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "knip": "^5.69.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.0",
    "tinypng-cli": "^0.0.7",
    "typescript": "~5.5.4",
    "use-count-up": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ]
  }
}
